</html>

<script>
    $('#btnResetPassword').click(function () {    
        var model={
            Id:$('#userid').val(),
            Password: $('#txtPassword').val()
        }
        $.ajax({
            type: "POST",
            url: '/Authentication/ResetPassword',
            data: {'model': model} ,
            success: function (data) {
                window.alert('password changed success');
                window.location.href='/';
            }
        });
    })
</script>
